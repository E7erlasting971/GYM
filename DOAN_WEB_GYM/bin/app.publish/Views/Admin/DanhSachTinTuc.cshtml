<!--**********************************
       Content body start
   ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Data Table</h4>
                        <div class="table-responsive">
                            <table style="width:100%" class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th style="width:25%">Tiêu Đề</th>
                                @*        <th style="width:25%">Mô Tả</th>*@
                                        <th style="width:25%">Hình ảnh</th>                                   
                                        <th style="width:25%">TÙY CHỌN</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                          @*  <td>@Html.DisplayFor(modelItem => item.description)</td>*@
                                            <td><img src="@item.urlImg" alt="hinh thumbnail" style="width:50%" /></td>
                                      
                                            <td>
                                                @Html.ActionLink("Edit", "Sua_TinTuc", new { id = item.idType }) |
                                                @Html.ActionLink("Details", "Details_TinTuc", new { id = item.idType }) |
                                                @Html.ActionLink("Delete", "Xoa_TinTuc", new { id = item.idType })
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                                <tfoot>
                                    <tr>
                                        <th>Tiêu Đề</th>
                                   @*     <th>Mô Tả</th>*@
                                        <th>Hình ảnh</th>
                                        <th>TÙY CHỌN</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
