    <link href="~/Content/css/style1.css" rel="stylesheet" />
    <link href="~/Content/css/style2.css" rel="stylesheet" />
    <link href="~/Content/font-awesomemin.css" rel="stylesheet" />



    <!--**********************************
           Content body start
       ***********************************-->
    <div class="content-body">

        <div class="row page-titles mx-0">
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Data Table</h4>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>Tên CLB</th>
                                            <th>Địa chỉ</th>
                                            <th>Hình ảnh</th>
                                            <th>Số điện thoại</th>
                                            <th>TÙY CHỌN</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.CLBName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.addressCLB)</td>
                                                <td><img src="@item.urlImg" alt="hinh thumbnail" style="width:50%" /></td>
                                                <td>@Html.DisplayFor(modelItem => item.phoneNumber)</td>
                                                <td>
                                                    @Html.ActionLink("Edit", "SuaCLB", new { id = item.idCLB }) |
                                                    @Html.ActionLink("Details", "DetailsCLB", new { id = item.idCLB }) |
                                                    @Html.ActionLink("Delete", "XoaCLB", new { id = item.idCLB })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <th>Tên CLB</th>
                                            <th>Địa chỉ</th>
                                            <th>Hình ảnh</th>
                                            <th>Số điện thoại</th>
                                            <th>TÙY CHỌN</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>
    <!--**********************************
        Content body end
    ***********************************-->
