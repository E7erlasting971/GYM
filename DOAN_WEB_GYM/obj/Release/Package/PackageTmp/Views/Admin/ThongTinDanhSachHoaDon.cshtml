<body>
    **********************************
           Content body start
       ***********************************
    <div class="content-body">

        <div class="row page-titles mx-0">
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
                </ol>
            </div>
        </div>
         row 
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h3>Chi Tiết Hóa Đơn</h3>
                          
                            
                            <h4 class="card-title"> </h4>
                            <div class="table-responsive">
                                <hr />
                                <br /> <br /> <br />
                                <table style="width:100%">
                                    <thead>
                                        <tr>
                                            <th style="width:25%"><h3>Khóa Tập Đã Đăng Ký </h3></th>
                                            <th style="width:25%"><h3>Giá </h3> </th>
                                            <th style="width:25%"><h3>Thời Gian </h3> </th>
                                            <th style="width:25%"><h3>Tên Câu Lạc Bộ </h3> </th>
                                        </tr>

                                    </thead>
                                    <hr />
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td> <strong><b><h6> @item.KhoaTap.nameCourse</h6></b></strong></td>
                                                <td> <strong><b><h6> @item.price</h6></b></strong></td>
                                                <td> <strong><b><h6> @item.KhoaTap.ThoiGian.timeStartEnd</h6></b></strong></td>
                                                <td> <strong><b><h6> @item.KhoaTap.CLB.CLBName</h6></b></strong></td>
                                              
                                                  @*<td>@Html.DisplayFor(modelItem => item.price)</td>
                                                   <td>@Html.DisplayFor(modelItem => item.KhoaTap.nameCourse)</td>*@

                                                 <td>  <a href="@Url.Action("ThongTinDanhSachHoaDon", "Admin")" class="btn btn-lg btn-outline-light mt-3 mt-md-5 py-md-3 px-md-5">Thông Tin</a></td>

                                            </tr>
                                        }
                                    </tbody>

                                </table>
                                <hr />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>




                                **********************************
                                Content body end
                            ***********************************
</body>